.toast
  position:fixed
  z-index: 2
  bottom: 0
  left: 0
  background-color: rgba(0,0,0, 0.9)
  overflow-x: hidden
  transition: opacity 1s
  width: 100%
  height: 20%
  text-align: center
  font-size: 24px
  color: rgb(61,162,247)

  &Open
    display: block
    opacity: 1

  &Close
    display: none
    opacity: 0

