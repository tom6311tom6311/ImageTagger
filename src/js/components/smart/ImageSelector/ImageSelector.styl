.imageSelector
  & > form
    margin: 0 auto
    width: 500px

  &FileInput
    width: 250px
    background-color: #e9ece5
    border: 4px solid #e9ece5
    border-radius: 8px
    padding: 10px
    margin: 15px
    cursor: pointer
  
  &SubmitButton
    width: 150px
    padding: 12px
    margin-left: 10px
    background-color: #e9ece5
    border: 4px solid #e9ece5
    border-radius: 8px
    font-size: 12px
    cursor: pointer
    &:hover
      background: #efefef

  &Previewer
    height: 500px
    padding: 3% 0
    background-color: #e9ece5

    &Text
      width: 100%
      height: 100%
      text-align: center;
      vertical-align: middle;
      line-height: 500px
      margin: auto

    > img
      display: block
      height: 100%
      margin: auto



